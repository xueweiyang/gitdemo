<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="165dp"
        android:layout_height="123dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/evaluateCoverImage"
        tools:src="@mipmap/ic_launcher"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="165dp"
        android:layout_height="123dp"
        android:src="@mipmap/ic_evaluate_courseware_lock"
        app:layout_constraintLeft_toLeftOf="@id/evaluateCoverImage"
        android:background="#66000000"
        android:scaleType="center"
        android:id="@+id/evaluateShadowImage"
        />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/evaluateNameTv"
        app:layout_constraintTop_toBottomOf="@id/evaluateCoverImage"
        tools:text="Are you ready ready ready"
        app:layout_constraintStart_toStartOf="parent"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintEnd_toStartOf="@id/evaluateNumTv"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/evaluateNumTv"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="0/9"
        app:layout_constraintTop_toBottomOf="@id/evaluateCoverImage"
        app:layout_constraintStart_toEndOf="@id/evaluateNameTv"
        android:layout_marginStart="12dp"/>

</android.support.constraint.ConstraintLayout>