<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/dialogVerifyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="请输入图形验证码"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatEditText
        android:layout_width="136dp"
        android:layout_height="36dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/dialogVerifyConfirm"
        app:layout_constraintTop_toBottomOf="@id/dialogVerifyTitle" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/dialogVerifyImage"
        android:layout_width="82dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/dialogVerifyConfirm"
        app:layout_constraintTop_toBottomOf="@id/dialogVerifyTitle" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/dialogVerifyConfirm"
        android:layout_width="216dp"
        android:layout_height="36dp"
        android:layout_marginBottom="32dp"
        android:text="确认"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogVerifyImage" />

</android.support.constraint.ConstraintLayout>